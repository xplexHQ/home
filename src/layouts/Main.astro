---
import '../styles/global.css';

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="robots" content="index, follow">
  <meta name="description" content={description || "xplex—your personal, self-hosted, open source, multi-streaming server. Live stream to multiple platforms simultaneously with complete control."}>
  <meta name="keywords" content="multi-streaming, rtmp server, open source streaming, xplex, self-hosted streaming, live streaming">
  <meta name="author" content="xplex">
  <link rel="canonical" href="https://xplex.me/" />
  <link rel="sitemap" href="/sitemap-index.xml" />
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://xplex.me/">
  <meta property="og:site_name" content="xplex">
  <meta property="og:title" content={title || "xplex | Multi-stream Renaissance"}>
  <meta property="og:description" content={description || "xplex—your personal, self-hosted, open source, multi-streaming server. Stream to multiple platforms simultaneously with complete control."}>
  <meta property="og:image" content="https://xplex.me/preview.png">
  <meta property="og:image:alt" content="xplex multi-streaming server">
  <meta property="og:image:width" content="1280">
  <meta property="og:image:height" content="640">
  <meta property="og:locale" content="en_US">
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:title" content={title || "xplex | Multi-stream Renaissance"}>
  <meta property="twitter:description" content={description || "xplex—your personal, self-hosted, open source, multi-streaming server. Stream to multiple platforms simultaneously with complete control."}>
  <meta property="twitter:image" content="https://xplex.me/preview.png">
  <meta property="twitter:image:alt" content="xplex multi-streaming server">
  <meta name="theme-color" content="#331144">
  <link rel="icon" href="/logo.svg" type="image/svg+xml">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">
  <title>{title || "xplex | Multi-stream Renaissance"}</title>

  <!-- Preload critical resources -->
  <link rel="preload" href="/logo.svg" as="image">
  <link rel="preconnect" href="https://github.com">

  <!-- Structured Data for Rich Results -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "xplex",
      "applicationCategory": "Multimedia",
      "operatingSystem": "Cross-platform",
      "description": "Your personal, self-hosted, open source, multi-streaming server",
      "url": "https://xplex.me/",
      "image": "https://xplex.me/preview.png",
      "screenshot": "https://xplex.me/xplex-banner.jpg"
    }
  </script>
</head>
<body>
  <div class="grid-bg"></div>
  <div class="glow large"></div>
  <div class="glow small"></div>

  <header>
    <a href="/" class="logo" aria-label="xplex Home">xplex</a>
    <nav aria-label="Main navigation">
      <ul>
        <li><a href="/about">Ahoy</a></li>
        <li><a href="https://blog.xplex.me/">Blog</a></li>
        <li><a href="https://github.com/xplexHQ" rel="noopener">Code</a></li>
        <li><a href="https://docs.xplex.me/">Docs</a></li>
      </ul>
    </nav>
    <a href="https://tally.so/r/mezW6q" class="primary cta button " rel="noopener">Request Invite</a>
  </header>

  <main>
    <slot />
  </main>

  <footer>
    <div class="container">
      <div class="footer-links">
        <a href="/about">Ahoy</a>
        <a href="https://blog.xplex.me/">Blog</a>
        <a href="https://github.com/xplexHQ" rel="noopener">Code</a>
        <a href="https://docs.xplex.me/">Docs</a>
      </div>
      <p class="copyright">© 2025 xplex—multi-streaming renaissance</p>
    </div>
  </footer>
</body>
</html>
